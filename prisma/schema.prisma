generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"

}
enum UserRole {
  USER
  ADMIN
}
model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String
  role      UserRole  @default(USER)
  posts     Post[]
  comments  Comment[]
  reactions Reaction[]
  media     Media[]
}

// 4. Định nghĩa Model Bài viết (Hỗ trợ SEO và Markdown)
model Post {
  id            Int        @id @default(autoincrement())
  title         String
  slug          String     @unique // Dùng cho SEO URL thay vì ID
  content       String     @db.Text // Lưu trữ chuỗi Markdown thô
  thumbnail     String?    // Link ảnh từ Cloudinary
  published     Boolean    @default(false)
  likeCount     Int        @default(0) // Cache số lượng để SSR nhanh hơn
  dislikeCount  Int        @default(0)
  author        User       @relation(fields: [authorId], references: [id])
  authorId      Int
  comments      Comment[]
  reactions     Reaction[]
  media         Media[]    // Ảnh thuộc bài viết này
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

// 5. Định nghĩa Model Bình luận
model Comment {
  id        Int      @id @default(autoincrement())
  content   String   // Plain text
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  createdAt DateTime @default(now())
}

// 6. Định nghĩa Model Cảm xúc (Like/Dislike)
enum ReactionType {
  LIKE
  DISLIKE
}

model Reaction {
  id     Int          @id @default(autoincrement())
  type   ReactionType
  user   User         @relation(fields: [userId], references: [id])
  userId Int
  post   Post         @relation(fields: [postId], references: [id])
  postId Int

  @@unique([userId, postId]) // Mỗi người chỉ được Reaction 1 lần/bài
}

model Media {
  id         Int      @id @default(autoincrement())
  url        String   // Secure URL từ Cloudinary
  publicId   String   @unique // ID trên Cloudinary, dùng để xóa ảnh
  format     String?  // jpg, png, webp...
  width      Int?     // Chiều rộng (px)
  height     Int?     // Chiều cao (px)
  bytes      Int?     // Kích thước file (bytes)

  uploader   User     @relation(fields: [uploaderId], references: [id])
  uploaderId Int

  post       Post?    @relation(fields: [postId], references: [id], onDelete: SetNull)
  postId     Int?     // null = ảnh chưa gắn vào bài viết (orphan/nháp)

  createdAt  DateTime @default(now())

  @@index([uploaderId])
  @@index([postId])
}