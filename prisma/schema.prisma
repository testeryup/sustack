generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  binanryTargets = ["linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}
enum UserRole {
  USER
  ADMIN
}

enum MediaStatus {
  PENDING
  ATTACHED
}

enum TaskStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String
  role      UserRole  @default(USER)
  posts     Post[]
  comments  Comment[]
  reactions Reaction[]
  media     Media[]
}

// 4. Định nghĩa Model Bài viết (Hỗ trợ SEO và Markdown)
model Post {
  id            Int        @id @default(autoincrement())
  title         String
  slug          String     @unique // Dùng cho SEO URL thay vì ID
  content       String     @db.Text // Lưu trữ chuỗi Markdown thô
  thumbnail     String?    // Link ảnh từ Cloudinary
  published     Boolean    @default(false)
  likeCount     Int        @default(0) // Cache số lượng để SSR nhanh hơn
  dislikeCount  Int        @default(0)
  author        User       @relation(fields: [authorId], references: [id])
  authorId      Int
  comments      Comment[]
  reactions     Reaction[]
  media         Media[]    // Ảnh thuộc bài viết này
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

// 5. Định nghĩa Model Bình luận (Đa cấp + Soft Delete)
model Comment {
  id        Int       @id @default(autoincrement())
  content   String    // Plain text
  post      Post      @relation(fields: [postId], references: [id])
  postId    Int
  author    User      @relation(fields: [authorId], references: [id])
  authorId  Int

  // Self-relation: bình luận đa cấp (reply)
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  parentId  Int?
  replies   Comment[] @relation("CommentReplies")

  // Soft delete: giữ thread liền mạch, nội dung hiển thị "[Đã xóa]"
  deletedAt DateTime?

  createdAt DateTime  @default(now())

  @@index([postId])
  @@index([authorId])
  @@index([parentId])
}

// 6. Định nghĩa Model Cảm xúc (Like/Dislike)
enum ReactionType {
  LIKE
  DISLIKE
}

model Reaction {
  id        Int          @id @default(autoincrement())
  type      ReactionType
  user      User         @relation(fields: [userId], references: [id])
  userId    Int
  post      Post         @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    Int
  createdAt DateTime     @default(now())

  @@unique([userId, postId]) // Mỗi người chỉ được Reaction 1 lần/bài
  @@index([postId])
}

model Media {
  id         Int          @id @default(autoincrement())
  url        String       // Secure URL từ Cloudinary
  publicId   String       @unique // ID trên Cloudinary, dùng để xóa ảnh
  format     String?      // jpg, png, webp...
  width      Int?         // Chiều rộng (px)
  height     Int?         // Chiều cao (px)
  bytes      Int?         // Kích thước file (bytes)
  status     MediaStatus  @default(PENDING) // Trạng thái: PENDING = orphan, ATTACHED = gắn bài

  uploader   User     @relation(fields: [uploaderId], references: [id])
  uploaderId Int

  post       Post?    @relation(fields: [postId], references: [id], onDelete: SetNull)
  postId     Int?     // null = ảnh chưa gắn vào bài viết (orphan/nháp)

  createdAt  DateTime @default(now())

  @@index([uploaderId])
  @@index([postId])
  @@index([status, createdAt]) // Tối ưu cho cron cleanup query
}

model Task {
  id        Int        @id @default(autoincrement())
  type      String     // Ví dụ: "SYNC_MEDIA"
  status    TaskStatus @default(PENDING)
  payload   Json       // { content, postId, userId }
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([status, createdAt])
}